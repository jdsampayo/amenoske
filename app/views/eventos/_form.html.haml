= simple_form_for @evento, :html => { :class => 'form-horizontal' } do |f|
  = f.input :fecha
  = f.input :ubicacion
  = f.input :precio
  = f.input :descripcion
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), eventos_path, :class => 'btn'
