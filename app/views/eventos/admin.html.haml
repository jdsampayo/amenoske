- model_class = Evento
.h-title
  %h2.one
    %span=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:fecha)
      %th= model_class.human_attribute_name(:ubicacion)
      %th= model_class.human_attribute_name(:precio)
      %th= model_class.human_attribute_name(:descripcion)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @eventos.each do |evento|
      %tr
        %td= link_to evento.id, evento_path(evento)
        %td= evento.fecha
        %td= evento.ubicacion
        %td= evento.precio
        %td= evento.descripcion
        %td=l evento.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_evento_path(evento), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), evento_path(evento), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_evento_path, :class => 'btn btn-primary'
