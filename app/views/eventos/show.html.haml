- model_class = Evento
.h-title
  %h2.one
    %span=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:fecha) + ':'
  %br
  = @evento.fecha
%p
  %strong= model_class.human_attribute_name(:ubicacion) + ':'
  %br
  = @evento.ubicacion
%p
  %strong= model_class.human_attribute_name(:precio) + ':'
  %br
  = @evento.precio
%p
  %strong= model_class.human_attribute_name(:descripcion) + ':'
  %br
  = @evento.descripcion

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), eventos_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_evento_path(@evento), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), evento_path(@evento), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
